<h1>
  <%= @article.title %>
</h1>

<div class="author">
  作者：<%= @article.author.nickname %>
</div>
<div class="clearfix">
  <% unless @article.source.blank? %>
    <div class="pull-right">
      <%= link_to @article.source, @article.source, target: '_blank', class: 'link' %>
    </div>
  <% end -%>  
  <div class="time">
    <%= short_time @article.created_at %>
  </div>
</div>
<div class="content" style="margin-top: 20px;">
  <%= raw @article.content %>
</div>
<%= form_for @comment, url: article_comments_path(@article) do |f| %>
  <%= f.text_field :content %>
  <%= f.submit %>
<% end -%>
<hr>
<h2><%= @article.comments.count %> Comments:</h2>
<% @article.comments.each do |comment| %>
<div class="well">
  <b>
    <%= comment.commenter.nickname if comment.commenter %>
    says: 
  </b>
  <%= comment.content %>
  <%= form_for @subcomment, url: article_subcomments_path(@article, comment) do |f| %>
    <%= f.text_field :content %>
    <%= f.submit %>
  <% end -%>
</div>
<% end -%>
<br>
<br>
<br>
<br>
<%= link_to 'Edit', edit_article_path(@article) %> |
<%= link_to 'Back', articles_path %>
