<div style="padding: 50px; width: 400px;">
  <% unless flash.empty? %>
  <div class="flash" style="position: absolute;top: -2px;width: 440px;left: 30px;">
    <% flash.each do |k,v| %>
      <div class="alert alert-<%= k %>">
        <%= v %>
      </div>
    <% end -%>
  </div>
  <% end -%>
<legend style="color: white;">
  <a href="<%= new_article_path %>" class="btn btn-danger pull-right" style="margin-top: 5px;">发布新文章</a>
  我的文章

</legend>

<table class="table table-bordered">
  <tr>
    <th class="w30">目录</th>
    <th>标题</th>
    <th colspan="2">动作</th>
  </tr>
  <% current_user.articles.unscoped.recent.each do |article| %>
    <tr>
      <td><%= article.category.name %></td>
      <% if article.is_verified? %>
      <td><%= link_to article.title, article_path(article), class: "link" %></td>
      <% else %>
      <td><%= link_to article.title, article_path(article), class: "link", remote: true %></td>
      <% end -%>
      <% if article.is_verified? %>
      <td colspan="2">已发布</td>
      <% else %>
      <td class="w30"><%= link_to '编辑', edit_article_path(article), class: "link" %></td>
      <td class="w30"><%= link_to '删除', destroy_article_path(article), remote: true, data: { confirm: 'Are you sure?' }, class: "link" %></td>
      <% end -%>
    </tr>
  <% end %>
</table>
</div>
