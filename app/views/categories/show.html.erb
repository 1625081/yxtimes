<% @category.articles.each do |article| %>
  <div class="verl"></div>
  <div class="category-block">
    <h3 class="m0"><%= link_to article.title, article %></h3>
    <p class="muted">
      作者：<%= link_to article.author.nickname, article.author, class: "muted" %>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<em><%= short_time(article.created_at) %> </em>
    </p>
    <p>
      <%= article.digest(100) %>
    </p>
    <div class="pull-right">
      <a href="<%= article_path(article, anchor: 'comments') %>" class="comments">
        <i class="icon-comment"></i>(<%= article.comments.count %>)
      </a>
    </div>
  </div>
<% end -%>
